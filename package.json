{
  "name": "whatsapp-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"ts-node src/app.ts\"",
    "generate:dev": "prisma generate --schema ./prisma/schema.prisma --watch",
    "generate:prod": "prisma generate --schema ./prisma/schema.prisma --no-engine",
    "migrate:dev": "prisma migrate dev --schema ./prisma/schema.prisma --watch",
    "migrate:prod": "prisma migrate deploy --schema ./prisma/schema.prisma --no-engine"
  },
  "keywords": [
    "whatsapp",
    "bot"
  ],
  "author": "Emmanuel Esquivel Pardo",
  "license": "ISC",
  "description": "",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "axios": "^1.8.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}